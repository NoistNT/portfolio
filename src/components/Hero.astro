---
import Badge from '@/components/ui/Badge.astro'
import Button from '@/components/ui/Button.astro'
import { Mail, MoveRight } from 'lucide-react'
---

<section id="hero" class="w-full py-20 lg:py-40">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 items-center gap-8 lg:grid-cols-2">
      <div class="flex flex-col gap-4 animate-fade-left lg:animate-fade-up">
        <div>
          <Badge variant="outline">Ariel Piazzano</Badge>
        </div>
        <div class="flex flex-col gap-4">
          <h1
            class="font-regular max-w-lg text-left text-5xl tracking-tighter md:text-7xl"
          >
            Full Stack Developer
          </h1>
          <p
            class="max-w-md text-left text-xl leading-relaxed tracking-tight text-muted-foreground"
          >
            Building modern web applications with passion and precision.
            Specialized in TypeScript, React, Node.js, and cloud technologies.
          </p>
        </div>
        <div class="flex flex-row gap-4">
          <Button size="lg" class="gap-4" variant="outline">
            Contact Me <Mail className="h-4 w-4" />
          </Button>
          <Button size="lg" class="gap-4">
            View Projects <MoveRight className="h-4 w-4" />
          </Button>
        </div>
      </div>
      <div
        class="aspect-square rounded-md bg-muted animate-fade-right lg:animate-fade-down"
      >
      </div>
    </div>
  </div>
</section>
