---
import { Button } from '@/components/ui/button'

const socialLinks = [
  {
    name: 'GitHub',
    url: 'https://github.com/yourusername',
    icon: 'github',
  },
  {
    name: 'LinkedIn',
    url: 'https://linkedin.com/in/yourusername',
    icon: 'linkedin',
  },
  {
    name: 'Twitter',
    url: 'https://twitter.com/yourusername',
    icon: 'twitter',
  },
]
---

<footer class="border-t bg-background">
  <div
    class="container flex flex-col items-center justify-between gap-4 py-10 md:h-24 md:flex-row md:py-0"
  >
    <div
      class="flex flex-col items-center gap-4 px-8 md:flex-row md:gap-2 md:px-0"
    >
      <p
        class="text-center text-sm leading-loose text-muted-foreground md:text-left"
      >
        Built with <a
          href="https://astro.build"
          target="_blank"
          rel="noreferrer"
          class="font-medium underline underline-offset-4">Astro</a
        > and <a
          href="https://tailwindcss.com"
          target="_blank"
          rel="noreferrer"
          class="font-medium underline underline-offset-4">Tailwind CSS</a
        >.
      </p>
    </div>
    <div class="flex items-center justify-center space-x-4">
      {
        socialLinks.map(({ name, url }) => (
          <Button variant="ghost" size="icon" asChild>
            <a
              href={url}
              target="_blank"
              rel="noreferrer"
              class="text-muted-foreground hover:text-foreground"
            >
              <span class="sr-only">{name}</span>
              <i class={`fab fa-${name.toLowerCase()}`} aria-hidden="true" />
            </a>
          </Button>
        ))
      }
    </div>
    <p class="text-center text-sm text-muted-foreground md:text-left">
      Developed by <a
        href="https://www.github.com/NoistNT"
        target="_blank"
        rel="noreferrer"
        class="font-medium underline underline-offset-4">Ariel Piazzano</a
      >.
    </p>
  </div>
</footer>

<!-- Add Font Awesome for social icons -->
<script
  is:inline
  src="https://kit.fontawesome.com/YOUR_KIT_CODE.js"
  crossorigin="anonymous"></script>
