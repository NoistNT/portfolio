---
import { cn } from '@/lib/utils';

export interface CardDescriptionProps extends astroHTML.JSX.HTMLAttributes {
  class?: string;
}

const { class: className, ...rest } = Astro.props;
const descriptionClasses = cn(
  'h-10 text-sm text-muted-foreground tracking-tight leading-relaxed',
  className
);
---

<p
  class={descriptionClasses}
  {...rest}
>
  <slot />
</p>
