---
import AstroLogo from '@/assets/astro.svg'
import GitHubLogo from '@/assets/github.svg'
import LinkedInLogo from '@/assets/linkedin.svg'
import TailwindCSSLogo from '@/assets/tailwindcss.svg'
import Button from '@/components/ui/Button.astro'
import { Image } from 'astro:assets'

const socialLinks = [
  {
    name: 'GitHub',
    url: 'https://github.com/noistnt',
    icon: GitHubLogo,
  },
  {
    name: 'LinkedIn',
    url: 'https://linkedin.com/in/arielpiazzano',
    icon: LinkedInLogo,
  },
]
---

<footer class="border-t bg-background">
  <div
    class="container flex flex-col items-center justify-between gap-4 py-10 md:h-24 md:flex-row md:py-0"
  >
    <div
      class="flex flex-col items-center gap-4 px-8 md:flex-row md:gap-2 md:px-0"
    >
      <p
        class="text-center text-sm leading-loose text-muted-foreground md:text-left"
      >
        Built with <a
          href="https://astro.build"
          target="_blank"
          rel="noreferrer"
          class="font-medium underline underline-offset-4 inline-flex items-center gap-1"
        >
          Astro
          <Image
            src={AstroLogo}
            alt="Astro Logo"
            width={16}
            height={16}
            class="inline-block"
          />
        </a> and <a
          href="https://tailwindcss.com"
          target="_blank"
          rel="noreferrer"
          class="font-medium underline underline-offset-4"
        >
          Tailwind CSS
          <Image
            src={TailwindCSSLogo}
            alt="Tailwind CSS Logo"
            width={16}
            height={16}
            class="inline-block"
          />
        </a>
      </p>
    </div>
    <div class="flex items-center justify-center space-x-4">
      {
        socialLinks.map(({ name, url, icon }) => (
          <Button variant="ghost" size="icon">
            <a href={url} target="_blank" rel="noreferrer">
              <span class="sr-only">{name}</span>
              <Image
                src={icon}
                alt={name}
                width={16}
                height={16}
                class="inline-block"
              />
            </a>
          </Button>
        ))
      }
    </div>
    <p class="text-center text-sm text-muted-foreground md:text-left">
      Developed by <a
        href="https://www.github.com/NoistNT"
        target="_blank"
        rel="noreferrer"
        class="font-medium underline underline-offset-4"
      >
        Ariel Piazzano
      </a>.
    </p>
  </div>
</footer>
