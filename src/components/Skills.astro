---
import Badge from '@/components/ui/Badge.astro'

const skills = [
  {
    category: 'Frontend',
    technologies: ['React', 'TypeScript', 'TailwindCSS', 'Next.js', 'Vue.js'],
  },
  {
    category: 'Backend',
    technologies: ['Node.js', 'Express', 'PostgreSQL', 'MongoDB', 'Redis'],
  },
  {
    category: 'DevOps',
    technologies: ['Docker', 'AWS', 'CI/CD', 'Git', 'Linux'],
  },
  {
    category: 'Tools',
    technologies: ['VS Code', 'Postman', 'Figma', 'Jest', 'webpack'],
  },
]
---

<section id="skills" class="py-20 bg-background">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center text-foreground mb-12">Skills</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        skills.map(({ category, technologies }) => (
          <div class="bg-card rounded-lg p-6 shadow-lg">
            <h3 class="text-xl font-bold text-card-foreground mb-4">
              {category}
            </h3>
            <div class="flex flex-wrap gap-2">
              {technologies.map((tech) => (
                <Badge>{tech}</Badge>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
