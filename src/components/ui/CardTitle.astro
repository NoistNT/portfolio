---
import { cn } from '@/lib/utils';

export interface CardTitleProps extends astroHTML.JSX.HTMLAttributes {
  class?: string;
  as?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
}

const { class: className, as: Component = 'h3', ...rest } = Astro.props;

const titleClasses = cn('text-2xl font-regular tracking-tighter', className);
---

<Component
  class={titleClasses}
  {...rest}
>
  <slot />
</Component>
